@model IEnumerable<MartialArtsSchool.Models.Member>

@{
    ViewData["Title"] = "ViewMembers";
}

<h1>Lesson Members</h1>
<table class="table">
<thead>
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Birth Date
        </th>
        <th>
            Actions
        </th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                <a asp-controller="Member" asp-action="View" asp-route-id="@item.IdMemeber">Details</a> |
            </td>
        </tr>
    }
</tbody>
</table>
<div>
    <a asp-action="Index" class="back-link">Back to List</a>
</div>
