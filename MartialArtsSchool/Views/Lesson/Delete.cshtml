@model MartialArtsSchool.Models.Lesson

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Lesson</h1>

<h3>Are you sure you want to delete this Lesson?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdLesson" />
        <input type="submit" value="Delete lesson" class="btn btn-danger" />
        <a asp-action="Index" class="back-link">Back to List of Lessons</a>
    </form>
</div>
